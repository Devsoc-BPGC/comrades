<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    android:orientation="vertical"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/EventTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Random Upcoming Event "
                android:fontFamily="@font/ps_bold"
                android:layout_margin="5dp"
                android:textColor="#000"
                android:textSize="25sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/SenderName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Firstname Lastname,"
                    android:fontFamily="@font/ps_regular"
                    android:layout_marginStart="5dp"
                    android:paddingBottom="5dp"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/SenderPost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Xyz of CSA"
                    android:fontFamily="@font/ps_regular"
                    android:layout_marginStart="5dp"
                    android:paddingBottom="5dp"
                    android:textSize="18sp"/>


            </LinearLayout>

            <TextView
                android:id="@+id/EventDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/lorem_ipsum"
                android:textSize="15sp"
                android:textColor="#000"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/NewsTimeStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="19/10/2018 07:30PM"
            android:layout_margin="5dp"
            android:layout_below="@id/LL"
            android:paddingTop="10dp"
            />

        <Button
            android:id="@+id/ReadMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Read more"
            android:fontFamily="@font/ps_regular"
            android:textAllCaps="false"
            android:drawablePadding="10dp"
            android:drawableEnd="@drawable/ic_arrow_forward_black_24dp"
            android:layout_below="@id/LL"
            android:drawableTint="#000"
            android:layout_alignParentEnd="true"
            android:background="#fff" />
    </RelativeLayout>



</com.google.android.material.card.MaterialCardView>